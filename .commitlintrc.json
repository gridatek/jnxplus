{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "release",
        "common",
        "nx-gradle",
        "create-nx-gradle-workspace",
        "xml",
        "nx-maven",
        "create-nx-maven-workspace"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "chore",
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ]
  }
}
