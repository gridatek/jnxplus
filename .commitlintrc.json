{
  "extends": ["@commitlint/config-angular"],
  "rules": {
    "scope-enum": [
      2,
      "always",
      [
        "common",
        "gradle",
        "gradle-plugin",
        "maven",
        "nx-boot-gradle",
        "nx-boot-maven",
        "nx-maven",
        "nx-quarkus-gradle",
        "nx-quarkus-maven"
      ]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "release"
      ]
    ]
  }
}
