{
  "name": "gradle-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/gradle-plugin/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@jnxplus/internal-executors:run-commands",
      "options": {
        "command": "build publishToMavenLocal",
        "cwd": "packages/gradle-plugin"
      }
    },
    "release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "angular",
        "push": true,
        "noVerify": true,
        "postTargets": ["gradle-plugin:set-version", "gradle-plugin:deploy"],
        "commitMessageFormat": "release: cut release ${version} for {projectName}"
      },
      "dependsOn": [
        {
          "target": "build"
        }
      ]
    },
    "set-version": {
      "executor": "@jnxplus/internal-executors:set-version",
      "options": {
        "version": "${version}"
      }
    },
    "deploy": {
      "executor": "@jnxplus/internal-executors:run-commands",
      "options": {
        "command": "publishPlugins",
        "cwd": "packages/gradle-plugin"
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["internal-executors"]
}
