{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxBootGradleInit",
  "title": "Init",
  "type": "object",
  "properties": {
    "javaVersion": {
      "description": "Java version",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ],
      "default": "11",
      "x-prompt": {
        "message": "Which version of Java would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "17",
            "label": "17"
          },
          {
            "value": "11",
            "label": "11"
          },
          {
            "value": "1.8",
            "label": "8"
          }
        ]
      }
    },
    "dsl": {
      "description": "Build DSL",
      "type": "string",
      "default": "groovy",
      "x-prompt": {
        "message": "Which build DSL would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "groovy",
            "label": "Groovy build DSL"
          },
          {
            "value": "kotlin",
            "label": "Kotlin build DSL"
          }
        ]
      }
    },
    "rootProjectName": {
      "type": "string",
      "default": "boot-multi-project",
      "x-prompt": "What rootProjectName would you like to use?",
      "pattern": "^[a-zA-Z].*$"
    }
  },
  "required": ["javaVersion", "dsl", "rootProjectName"]
}
