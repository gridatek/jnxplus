{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "NxQuarkusGradleApp",
  "title": "Create an application",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?",
      "pattern": "^[a-zA-Z].*$"
    },
    "tags": {
      "type": "string",
      "description": "Add tags to the project (used for linting)",
      "alias": "t"
    },
    "directory": {
      "type": "string",
      "description": "A directory where the project is placed",
      "alias": "dir"
    },
    "language": {
      "description": "Language of the project",
      "type": "string",
      "default": "java",
      "x-prompt": {
        "message": "Which language would you like to use?",
        "type": "list",
        "items": [
          {
            "value": "java",
            "label": "Java"
          },
          {
            "value": "kotlin",
            "label": "Kotlin"
          }
        ]
      }
    },
    "groupId": {
      "type": "string",
      "default": "org.acme",
      "x-prompt": "What groupId would you like to use?"
    },
    "packageNameType": {
      "description": "Package name type",
      "type": "string",
      "default": "long",
      "x-prompt": {
        "message": "How do you like to construct the PackageName?",
        "type": "list",
        "items": [
          {
            "value": "short",
            "label": "Short: groupId + projectName"
          },
          {
            "value": "long",
            "label": "Long: groupId + projectDirectory + projectName"
          }
        ]
      }
    },
    "projectVersion": {
      "type": "string",
      "default": "0.0.1-SNAPSHOT",
      "description": "Version of the project to generate",
      "alias": "v",
      "x-prompt": "What project version would you like to use?"
    },
    "configFormat": {
      "description": "Configuration format of the project",
      "type": "string",
      "default": ".properties",
      "x-prompt": {
        "message": "Which configuration format would you like to use?",
        "type": "list",
        "items": [
          {
            "value": ".properties",
            "label": "Properties"
          },
          {
            "value": ".yml",
            "label": "Yaml"
          }
        ]
      }
    }
  },
  "required": ["name", "language", "groupId", "projectVersion", "configFormat"]
}
